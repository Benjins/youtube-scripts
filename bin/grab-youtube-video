#!/usr/bin/env zsh

set -eu -o pipefail

. ~/.zshrc

i=$1
url=$2

mkdir -p ~/YouTube/$i
cd ~/YouTube/$i
ts mkdir .

# The name of the session is a lock that prevents multiple downloaders from working
# on the same folder.
tmux new -s "YouTube-$i" -x 240 -y 30 -d ". ~/.zshrc && cd ~/YouTube/$i && tube-with-mtime -- '$url'; sleep 5"
