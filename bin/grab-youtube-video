#!/usr/bin/env zsh

set -eu -o pipefail

. ~/.zshrc

i=$1
url=$2

mkdir -p ~/YouTube/$i
cd ~/YouTube/$i
ts mkdir .

logdir=/var/www/html/logs/dl/$i
mkdir -p $logdir
date=$(date --iso-8601=seconds | cut -d '+' -f 1 | sed 's/:/_/g')

# The name of the session is a lock that prevents multiple downloaders from working
# on the same folder.
tmux new -s "YouTube-$i" -x 240 -y 30 -d "(. ~/.zshrc && cd ~/YouTube/$i && tube-with-mtime -- '$url'; sleep 5) 2>&1 | tee >(strip-youtube-dl-progress > $logdir/$date.single.log)"
